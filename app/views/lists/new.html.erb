<div class="form">
<h2> New List </h2>
  <%= form_for(:list, url: lists_path, method: :post, role: "form") do |f| %>
  
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %><br>

  <%= f.label :description %>
  <%= f.text_field :description, class: "form-control" %><br>

  <div>
    <%= f.submit "Add List", class: "btn btn-primary" %>
  </div>
  <% end %>
</div>