<h3> All of Your Lists </h3>
<%= link_to '<--Home', root_path %>
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.title %> </td>
        <td><%= list.description %> </td>
        <td><%= link_to 'Edit', edit_list_path(list) %> </td>
        <td><%= link_to 'Delete', list_path(list), method: :delete %> </td>
      </tr>
    <% end %>
    
  </tbody>

</table>
